
.container{
    
}

.inner-container{
    padding: 30rpx 30rpx 0 30rpx;
}

.sku-container {
    box-sizing: border-box;
    background-color: #ffffff;
    min-height: 600rpx;
    max-height: 1000rpx;
    margin-bottom: 100rpx;
}

.sku-img {
    width: 160rpx;
    height: 160rpx;
}

.discount-price {
    margin-left: 20rpx
}

.price-row {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.sku-preview {
    display: flex;
    flex-direction: row;
}

.sku-description {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.hr {
    width: 690rpx;
    height: 2rpx;
    background-color: #e9e9e9;
    margin-top: 30rpx;
}

.stock-pinch {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #D20109;
}

.stock{
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999;
}

.sku-pending > text:first-child{
    color: #999;
}

.sku-pending > text:nth-child(2){
    color: #666;
}

.sku-pending{
    font-size: 20rpx;
}

.counter-container{
    margin-top: 34rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 200rpx;
}

.counter-container text{
    color: #555;
    font-size: 24rpx;
}

.bottom-btn{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100rpx;
    background-color: #333;
    position: absolute;
    bottom: 0;
}

.out-stock{
    background-color: #DCEBE6;
}

.bottom-btn text{
    color: #fff;
}