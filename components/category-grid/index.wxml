<view class="container">
    <l-grid l-class="inner-container" row-num="3">
        <block wx:for="{{grid}}" wx:key="{{index}}" >
            <l-grid-item slot="{{index}}" key="{{index}}" >
                <view class="grid-item" hover-class="small-hover" hover-stay-time="200">
                    <image src="{{item.img}}" class="img"></image>
                    <text class="text">{{item.title}}</text>
                </view>
            </l-grid-item>
        </block>
    </l-grid>
</view>