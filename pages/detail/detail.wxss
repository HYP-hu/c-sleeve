.top{
    width: 100%;
    height: 680rpx;
}

.tab-bar{
    position: fixed;
    bottom: 0;
}

.sku-pending{
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    margin: 10rpx 0;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    padding: 0 30rpx;
    background-color: #fff;
}

.specs > text:first-child{
    color: #999;
    font-size: 24rpx;
}

.specs > text:nth-child(2){
    font-size: 24rpx;
    color: #157658;
}

.explain{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-top: 10rpx;
    background-color: #fff;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
}

.detail-img{
    display: flex;
    width: 100%;
}